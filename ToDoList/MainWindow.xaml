<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        xmlns:customControls="clr-namespace:Custom.Controls;assembly=Custom.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800" Background="#FFF0F0F0">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="2"></Setter>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="2"></Setter>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="2"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"></Setter>
            <Setter Property="Background" Value="#FF005582"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="2"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <GroupBox x:Name="LeftGroupBox" 
                  Margin="3" 
                  Header="All Tasks"
                  Grid.Column="0">
                <StackPanel>
                    <DataGrid x:Name="ToDoItemsDataGrid"
                          ColumnWidth="*"
                          IsReadOnly="True"
                          AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Task" 
                                            Binding="{Binding ItemName}">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Due" 
                                            Binding="{Binding DueDate}">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Priority" 
                                            Binding="{Binding Priority}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid x:Name="PaginationGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="PreviousButton"
                        Content="Previous"
                        Grid.Column="0">
                        </Button>
                        <TextBlock x:Name="PagecountTextBlock"
                           TextAlignment="Center"
                           Grid.Column="1">
                        </TextBlock>
                        <Button x:Name="NextButton"
                        Content="Next"
                        Grid.Column="2">
                        </Button>
                    </Grid>
                    <Button x:Name="MarkAsCompletedButton"
                        Content="Mark Complete">
                    </Button>
                </StackPanel>
            </GroupBox>
            <GroupBox x:Name="RightGroupBox" 
                  Margin="3" 
                  Header="Add a New Task"
                  Grid.Column="1">
                <StackPanel>
                    <Label
                    x:Name="NameLabel"
                    Content="Describe your task:">
                    </Label>
                    <TextBox x:Name="NameTextBox">
                    </TextBox>
                    <Label x:Name="PriorityLabel"
                       Content="Priority:">
                    </Label>
                    <ListBox x:Name="PriorityListBox">
                    </ListBox>
                    <Label x:Name="DueDateLabel"
                       Content="Due:">
                    </Label>
                    <DatePicker x:Name="DueDatePicker">
                    </DatePicker>
                    <Button x:Name="AddItemButton"
                        Content="Add">
                    </Button>
                </StackPanel>
            </GroupBox>
        </Grid>
        <customControls:CompletionScreen x:Name="CompletionScreen"
                                         Visibility="Hidden" 
                                         IsVisibleChanged="CompletionScreen_IsVisibleChanged">
        </customControls:CompletionScreen>
    </Grid>
</Window>
